@model SGBL.Application.ViewModels.LoanViewModel
@{
    ViewData["Title"] = "Editar Préstamo";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la lista
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Editar Información del Préstamo</h6>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <partial name="_LoanForm" model="Model" />

                <div class="row mt-4">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Actualizar Préstamo
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>