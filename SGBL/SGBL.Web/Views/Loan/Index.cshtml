@model SGBL.Application.ViewModels.PagedResultViewModel<SGBL.Application.ViewModels.LoanViewModel>
@{
    var viewType = ViewData["ViewType"] as string;
    var title = viewType == "active" ? "Préstamos Activos" : "Gestión de Préstamos";

    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nuevo Préstamo
    </a>
</div>

<!-- Filtros -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <a asp-action="Index"
           class="btn @(viewType == "active" ? "btn-outline-secondary w-100" : "btn-secondary w-100")">
            Todos los Préstamos
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="ActiveLoans"
           class="btn @(viewType == "active" ? "btn-warning w-100" : "btn-outline-warning w-100")">
            Préstamos Activos
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="Create" class="btn btn-outline-success w-100">Crear Préstamo</a>
    </div>
</div>
@if (ViewBag.TotalDebt != null && (decimal)ViewBag.TotalDebt > 0)
{
    @if (User.IsInRole("9"))
    {
        <div class="alert alert-warning mb-3">
            Tienes una deuda acumulada de
        <strong>@(((decimal)ViewBag.TotalDebt).ToString("C"))</strong>
        por préstamos vencidos.
    </div>}
    
}
<!-- Tabla de Préstamos -->
<div class="card">
    <div class="card-body">
        @if (Model.Items != null && Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Libro</th>
                            <th>Usuario</th>
                            <th>Deuda</th>
                            <th>Fecha Préstamo</th>
                            <th>Fecha Vencimiento</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model.Items)
                        {
                            <tr>
                                <td>@loan.Id</td>
                                <td>@loan.BookTitle</td>
                                <td>@loan.UserName</td>
                                <td>@loan.CalculatedFine.ToString("C")</td>
                                <td>@loan.DateLoan?.ToString("dd/MM/yyyy")</td>
                                <td>@loan.DueDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(loan.StatusName)">
                                        @loan.StatusName
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <!-- Editar -->
                                        <a asp-action="Edit" asp-route-id="@loan.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <!-- Confirmar retiro (solo Bibliotecario y cuando está Pendiente) -->
                                        @if (User.IsInRole("8") && loan.StatusName == "Pendiente")
                                        {
                                            <form asp-action="MarkAsPickedUp" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="loanId" value="@loan.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning"
                                                        onclick="return confirm('¿Confirmar que el usuario retiró el libro?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }

                                        <!-- Devolver libro (solo cuando está Recogido y no tiene ReturnDate) -->
                                        @if (User.IsInRole("8") && loan.StatusName == "Recogido" && loan.ReturnDate == null)
{
    <form asp-action="ReturnBook" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="loanId" value="@loan.Id" />
        <button type="submit" class="btn btn-sm btn-outline-success"
                onclick="return confirm('¿Está seguro de marcar este libro como devuelto?')">
            <i class="fas fa-undo"></i>
        </button>
    </form>
}

                                        <!-- Eliminar -->
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@loan.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('¿Está seguro de eliminar este préstamo?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Anterior</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }

                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Siguiente</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No se encontraron préstamos</h5>
                <p class="text-muted">No hay préstamos registrados en el sistema.</p>
                <a asp-action="Create" class="btn btn-primary">Crear Primer Préstamo</a>
            </div>
        }
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string statusName)
    {
        return statusName?.ToLower() switch
        {
            "pendiente" => "bg-warning text-dark",
            "recogido"  => "bg-info",
            "retornado" => "bg-success",
            "cancelado" => "bg-danger",
            _           => "bg-secondary"
        };
    }
}
