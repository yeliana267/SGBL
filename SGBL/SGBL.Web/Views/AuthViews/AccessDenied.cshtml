@{
    ViewData["Title"] = "Acceso Denegado - SGBL";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --color-crema: #E2DED2;
            --color-azul: #182D4C;
            --color-dorado: #C8A952;
            --color-crema-claro: #FDF2D2;
            --color-blanco: #FFFFFF;
            --color-negro: #333333;
            --color-gris: #7A7A7A;
            --font-garamond: "Garamond", "Times New Roman", serif;
        }

        body {
            background: linear-gradient(135deg, var(--color-azul) 0%, #2c3e50 100%);
            min-height: 100vh;
            font-family: var(--font-garamond);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .access-denied-card {
            background: var(--color-blanco);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            max-width: 500px;
            width: 100%;
            border: 3px solid var(--color-dorado);
            overflow: hidden;
        }

        .card-header {
            background: var(--color-azul);
            color: var(--color-crema-claro);
            border-bottom: 3px solid var(--color-dorado);
            padding: 2rem;
        }

        .icon-container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            border: 3px solid var(--color-crema-claro);
        }

        .btn-outline-custom {
            border: 2px solid var(--color-azul);
            color: var(--color-azul);
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-custom:hover {
                background: var(--color-azul);
                color: var(--color-crema-claro);
                transform: translateY(-2px);
            }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--color-dorado) 0%, #b8943a 100%);
            border: none;
            color: var(--color-azul);
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(200, 169, 82, 0.4);
                color: var(--color-azul);
            }

        .card-body {
            padding: 2.5rem;
        }

        .error-code {
            font-size: 0.9rem;
            color: var(--color-gris);
            letter-spacing: 2px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="access-denied-card shadow-lg">
                    <!-- Header -->
                    <div class="card-header text-center">
                        <div class="icon-container">
                            <i class="fas fa-ban text-crema-claro" style="font-size: 3rem;"></i>
                        </div>
                        <h1 class="fw-bold mb-2">Acceso Denegado</h1>
                        <div class="error-code">ERROR 403</div>
                    </div>

                    <!-- Body -->
                    <div class="card-body text-center">
                        <p class="text-muted mb-4 lead">
                            No tienes los permisos necesarios para acceder a esta página.
                            Si crees que esto es un error, contacta al administrador del sistema.
                        </p>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                            <a href="javascript:history.back()" class="btn btn-outline-custom btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i> Volver Atrás
                            </a>
                            <form asp-action="Logout" asp-controller="AuthViews" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary-custom btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                                </button>
                            </form>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Si necesitas acceso a esta sección, contacta al administrador
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>