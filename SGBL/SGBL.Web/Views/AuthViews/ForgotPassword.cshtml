@model SGBL.Application.Dtos.Auth.ForgotPasswordRequestDto
@{
    ViewData["Title"] = "Recuperar Contraseña - SGBL";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --color-crema: #E2DED2;
            --color-azul: #182D4C;
            --color-dorado: #C8A952;
            --color-crema-claro: #FDF2D2;
            --color-blanco: #FFFFFF;
            --color-negro: #333333;
            --color-gris: #7A7A7A;
            --font-garamond: "Garamond", "Times New Roman", serif;
        }

        body {
            background: linear-gradient(135deg, var(--color-azul) 0%, #2c3e50 100%);
            min-height: 100vh;
            font-family: var(--font-garamond);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .forgot-card {
            background: var(--color-blanco);
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            max-width: 450px;
            width: 100%;
            border: 2px solid var(--color-dorado);
        }

        .card-header {
            background: var(--color-azul);
            color: var(--color-crema-claro);
            border-bottom: 3px solid var(--color-dorado);
            border-radius: 13px 13px 0 0 !important;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--color-dorado) 0%, #b8943a 100%);
            border: none;
            color: var(--color-azul);
            font-weight: 600;
            font-family: var(--font-garamond);
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(200, 169, 82, 0.4);
                color: var(--color-azul);
            }

        .form-control:focus {
            border-color: var(--color-dorado);
            box-shadow: 0 0 0 0.25rem rgba(200, 169, 82, 0.25);
        }

        .input-group-text {
            background: var(--color-crema-claro);
            border: 1px solid var(--color-crema);
            color: var(--color-azul);
        }

        .back-link {
            color: var(--color-azul);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: var(--color-dorado);
            }

        .alert-success {
            background: var(--color-crema-claro);
            border: 1px solid var(--color-dorado);
            color: var(--color-azul);
        }

        .alert-danger {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="forgot-card shadow-lg">
                    <!-- Header -->
                    <div class="card-header text-center py-4">
                        <div class="mb-3">
                            <i class="fas fa-key fa-2x text-warning"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Recuperar Contraseña</h2>
                        <p class="mb-0 opacity-75">Ingresa tu email para recibir instrucciones</p>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        <!-- Alertas -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Formulario -->
                        <form asp-action="ForgotPassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold text-azul">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control" placeholder="tu@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                <div class="form-text text-muted mt-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Te enviaremos un enlace seguro para restablecer tu contraseña.
                                </div>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-primary-custom btn-lg py-3 fw-bold">
                                    <i class="fas fa-paper-plane me-2"></i> Enviar Instrucciones
                                </button>
                            </div>
                        </form>

                        <div class="text-center pt-3 border-top">
                            <a asp-action="Login" class="back-link fw-semibold">
                                <i class="fas fa-arrow-left me-2"></i> Volver al Inicio de Sesión
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>