@model SGBL.Application.Dtos.Auth.ForgotPasswordRequestDto
@{
    ViewData["Title"] = "Recuperar Contraseña - SGBL";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="forgot-password-body">
    <div class="forgot-password-container">
        <div class="forgot-password-card shadow-lg">
            <!-- Header -->
            <div class="card-header">
                <div class="mb-4">
                    <i class="fas fa-lock"></i>
                </div>
                <h2>Recuperar Contraseña</h2>
                <p>Ingresa tu email para restablecer tu acceso</p>
            </div>

            <!-- Body -->
            <div class="card-body">
                <!-- Alertas -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert recovery-alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>¡Éxito!</strong> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert recovery-alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Error:</strong> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Formulario -->
                <form asp-action="ForgotPassword" method="post" class="recovery-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-2 d-block"></span>
                        <div class="recovery-help-text">
                            <i class="fas fa-shield-alt me-2"></i>
                            Te enviaremos un enlace seguro para restablecer tu contraseña.
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-recovery">
                            <i class="fas fa-paper-plane me-2"></i> Enviar Instrucciones
                        </button>
                    </div>
                </form>

                <div class="text-center pt-4 border-top">
                    <a asp-action="Login" class="recovery-back-link">
                        <i class="fas fa-arrow-left me-2"></i> Volver al Inicio de Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>