@model SGBL.Application.Dtos.Auth.RegisterRequestDto
@{
    ViewData["Title"] = "Registrarse - SGBL";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- FAVICON -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <i class="fas fa-user-plus fa-2x"></i>
                </div>
                <h1 class="login-title">Crear Cuenta</h1>
                <p class="login-subtitle">Regístrate en Library Hub</p>
            </div>

            <!-- Alertas -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Formulario de Registro -->
            <form class="login-form" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Nombre Completo</label>
                    <div class="input-group">
                        <span class="input-group-text bg-crema-claro">
                            <i class="fas fa-user text-azul"></i>
                        </span>
                        <input asp-for="Name" class="form-control" placeholder="Tu nombre completo" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-crema-claro">
                            <i class="fas fa-envelope text-azul"></i>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="tu@email.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text bg-crema-claro">
                            <i class="fas fa-lock text-azul"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text bg-crema-claro">
                            <i class="fas fa-lock text-azul"></i>
                        </span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repite tu contraseña" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary login-button">
                    <i class="fas fa-user-plus me-2"></i> Crear Cuenta
                </button>
            </form>

            <div class="login-footer">
                <p>¿Ya tienes una cuenta? <a asp-action="Login" class="register-link">Inicia Sesión</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>