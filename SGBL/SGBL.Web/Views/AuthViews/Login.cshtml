@model SGBL.Application.Dtos.Auth.LoginRequestDto
@{
    ViewData["Title"] = "Iniciar Sesión - SGBL";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <img src="/lib/img/logo library.jpg" alt="Library Hub Logo" width="120" height="120" />
                    <!-- <i class="fas fa-book-open fa-2x"></i>-->
                </div>
                <h1 class="login-title">Library Hub</h1>
                <p class="login-subtitle">Sistema de Gestión de Biblioteca</p>
            </div>

            <!-- Alertas -->
            @if (TempData["Error"]?.ToString()?.Contains("expirado") == true ||
                        TempData["Error"]?.ToString()?.Contains("inválido") == true)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                    <div class="mt-2">
                        <form asp-action="ResendConfirmation" method="post" class="d-inline">
                            <input type="hidden" name="email" value="@Model?.Email" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning btn-sm">
                                <i class="fas fa-paper-plane me-1"></i> Reenviar enlace de confirmación
                            </button>
                        </form>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null &&
                        !TempData["Error"]?.ToString()?.Contains("expirado") == true &&
                        !TempData["Error"]?.ToString()?.Contains("inválido") == true)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Formulario de Login -->
            <form class="login-form" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-crema-claro">
                            <i class="fas fa-envelope text-azul"></i>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="tu@email.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text bg-crema-claro">
                            <i class="fas fa-lock text-azul"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Tu contraseña" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="login-options">
                    <div class="remember-me">
                        <input type="checkbox" id="remember" name="remember" class="form-check-input">
                        <label for="remember" class="form-check-label">Recordarme</label>
                    </div>
                    <a asp-action="ForgotPassword" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn btn-primary login-button">
                    <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                </button>
            </form>

            <div class="login-footer">
                <p class="mb-2">¿No tienes una cuenta?</p>
                <a asp-action="Register" class="btn btn-outline">
                    <i class="fas fa-user-plus me-2"></i> Crear Cuenta
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>