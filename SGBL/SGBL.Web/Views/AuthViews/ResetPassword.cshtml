@model SGBL.Application.Dtos.Auth.ResetPasswordRequestDto
@{
    ViewData["Title"] = "Restablecer Contraseña - SGBL";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --color-crema: #E2DED2;
            --color-azul: #182D4C;
            --color-dorado: #C8A952;
            --color-crema-claro: #FDF2D2;
            --color-blanco: #FFFFFF;
            --color-negro: #333333;
            --color-gris: #7A7A7A;
            --font-garamond: "Garamond", "Times New Roman", serif;
        }

        body {
            background: linear-gradient(135deg, var(--color-azul) 0%, #2c3e50 100%);
            min-height: 100vh;
            font-family: var(--font-garamond);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .reset-card {
            background: var(--color-blanco);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            max-width: 500px;
            width: 100%;
            border: 3px solid var(--color-dorado);
            overflow: hidden;
        }

        .card-header {
            background: var(--color-azul);
            color: var(--color-crema-claro);
            border-bottom: 3px solid var(--color-dorado);
            padding: 2rem;
        }

        .icon-container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            border: 2px solid var(--color-crema-claro);
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--color-dorado) 0%, #b8943a 100%);
            border: none;
            color: var(--color-azul);
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(200, 169, 82, 0.4);
                color: var(--color-azul);
            }

        .form-control:focus {
            border-color: var(--color-dorado);
            box-shadow: 0 0 0 0.25rem rgba(200, 169, 82, 0.25);
        }

        .input-group-text {
            background: var(--color-crema-claro);
            border: 1px solid var(--color-crema);
            color: var(--color-azul);
        }

        .back-link {
            color: var(--color-azul);
            text-decoration: none;
            transition: color 0.3s ease;
            font-weight: 600;
        }

            .back-link:hover {
                color: var(--color-dorado);
            }

        .password-strength {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .form-control:disabled {
            background-color: var(--color-crema-claro);
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="reset-card shadow-lg">
                    <!-- Header -->
                    <div class="card-header text-center">
                        <div class="icon-container">
                            <i class="fas fa-lock text-crema-claro" style="font-size: 2rem;"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Nueva Contraseña</h2>
                        <p class="mb-0 opacity-75">Crea una nueva contraseña segura</p>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Email (solo lectura) -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-azul">Email de la cuenta</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="text" class="form-control" value="@Model.Email" disabled />
                                </div>
                                <div class="form-text text-muted mt-1">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Verificación de identidad completada
                                </div>
                            </div>

                            <!-- Nueva Contraseña -->
                            <div class="mb-4">
                                <label asp-for="NewPassword" class="form-label fw-semibold text-azul">Nueva Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-key"></i>
                                    </span>
                                    <input asp-for="NewPassword" type="password" class="form-control"
                                           placeholder="Mínimo 6 caracteres" required />
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                <div class="password-strength text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Usa una combinación de letras, números y símbolos
                                </div>
                            </div>

                            <!-- Confirmar Contraseña -->
                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold text-azul">
                                    Confirmar Nueva Contraseña
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-key"></i>
                                    </span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control"
                                           placeholder="Repite la nueva contraseña" required />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <!-- Botón de envío -->
                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-primary-custom btn-lg py-3 fw-bold">
                                    <i class="fas fa-save me-2"></i> Restablecer Contraseña
                                </button>
                            </div>
                        </form>

                        <!-- Enlace de regreso -->
                        <div class="text-center pt-3 border-top">
                            <a asp-action="Login" class="back-link">
                                <i class="fas fa-arrow-left me-2"></i> Volver al Inicio de Sesión
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>