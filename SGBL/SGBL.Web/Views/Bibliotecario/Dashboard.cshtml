@{
    ViewData["Title"] = "Dashboard Bibliotecario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-tachometer-alt text-system-primary me-2"></i>@ViewData["Title"]
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="@Url.Action("LoanManagement", "Bibliotecario")" class="btn btn-system-primary">
                <i class="fas fa-exchange-alt me-1"></i> Gestionar Préstamos
            </a>
        </div>
    </div>
</div>

<!-- Estadísticas del bibliotecario -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-border-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-system-primary text-uppercase mb-1">
                            Préstamos Hoy
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-arrow-up fa-2x text-system-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card card-border-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-system-gold text-uppercase mb-1">
                            Devoluciones Pendientes
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-system-gold"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Libros Disponibles
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">4,231</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Reservas Activas
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">15</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Acciones rápidas y actividades -->
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-system-primary">Acciones Rápidas</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="@Url.Action("LoanManagement", "Bibliotecario")" class="btn btn-system-primary w-100 h-100 py-3">
                            <i class="fas fa-exchange-alt fa-2x mb-2"></i><br>
                            Gestionar Préstamos
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="@Url.Action("BookManagement", "Bibliotecario")" class="btn btn-system-gold w-100 h-100 py-3">
                            <i class="fas fa-book fa-2x mb-2"></i><br>
                            Gestionar Libros
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="@Url.Action("Returns", "Bibliotecario")" class="btn btn-warning w-100 h-100 py-3">
                            <i class="fas fa-undo fa-2x mb-2"></i><br>
                            Procesar Devoluciones
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-system-primary w-100 h-100 py-3">
                            <i class="fas fa-search fa-2x mb-2"></i><br>
                            Buscar Usuario
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-system-primary">Préstamos Recientes</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">María González</h6>
                                <p class="mb-1 small">"1984" - George Orwell</p>
                                <small class="text-muted">Hace 15 minutos</small>
                            </div>
                            <span class="badge bg-system-primary">Activo</span>
                        </div>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Carlos López</h6>
                                <p class="mb-1 small">"El amor en los tiempos del cólera"</p>
                                <small class="text-muted">Hace 1 hora</small>
                            </div>
                            <span class="badge bg-system-primary">Activo</span>
                        </div>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Ana Martínez</h6>
                                <p class="mb-1 small">"La sombra del viento"</p>
                                <small class="text-muted">Hace 2 horas</small>
                            </div>
                            <span class="badge bg-system-gold">Por vencer</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>