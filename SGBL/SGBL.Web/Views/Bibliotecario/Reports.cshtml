@model SGBL.Application.ViewModels.LibrarianReportViewModel
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center pb-2 mb-4 border-bottom">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-clipboard-list text-primary me-2"></i>Reportes de circulación</h1>
            <small class="text-muted">Seguimiento operativo para bibliotecarios</small>
        </div>
        <span class="badge bg-success">Bibliotecario</span>
    </div>

    <div class="row g-3 mb-4">
        @foreach (var card in Model.SummaryCards)
        {
            <div class="col-xl-3 col-md-6">
                <div class="card shadow-sm h-100 border-start border-4 border-@card.ColorClass">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted text-uppercase mb-1 small">@card.Title</p>
                                <h4 class="mb-0 fw-bold">@card.Value</h4>
                                <small class="text-muted">@card.Description</small>
                            </div>
                            <div class="text-@card.ColorClass">
                                <i class="fas @card.Icon fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Próximas devoluciones</h5>
                        <small class="text-muted">Ordenadas por fecha de entrega</small>
                    </div>
                    <i class="fas fa-calendar-day text-primary"></i>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingReturns.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.UpcomingReturns)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@item.Title</strong>
                                        <div class="text-muted small">@item.Subtitle</div>
                                    </div>
                                    <div class="text-end">
                                        <div>@item.Value</div>
                                        <span class="badge @item.BadgeClass">@item.BadgeText</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">No hay devoluciones próximas registradas.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Préstamos pendientes de recoger</h5>
                        <small class="text-muted">Solicitudes que aún no se retiran</small>
                    </div>
                    <i class="fas fa-box-open text-warning"></i>
                </div>
                <div class="card-body">
                    @if (Model.PendingPickups.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.PendingPickups)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@item.Title</strong>
                                        <div class="text-muted small">@item.Subtitle</div>
                                    </div>
                                    <div class="text-end">
                                        <div>@item.Value</div>
                                        <span class="badge @item.BadgeClass">@item.BadgeText</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-secondary mb-0">No hay préstamos pendientes de recogida.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>