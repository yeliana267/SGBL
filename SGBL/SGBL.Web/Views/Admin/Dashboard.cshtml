@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    // ⭐ OBTENER LOS DATOS DESDE ViewData
    var totalUsers = ViewData["TotalUsers"] as int? ?? 0;
    var totalBooks = ViewData["TotalBooks"] as int? ?? 0;
    var totalAuthors = ViewData["TotalAuthors"] as int? ?? 0;
    var totalLoans = ViewData["TotalLoans"] as int? ?? 0;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center pb-2 mb-4 border-bottom">
        <h1 class="h2">
            <i class="fas fa-cogs text-azul me-2"></i>@ViewData["Title"]
        </h1>
        <div class="text-muted">
            <small>Bienvenido, @ViewData["UserName"]</small>
        </div>
    </div>

    <!-- Tarjetas de Módulos -->
    <div class="row">
        <!-- Gestión de Autores -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-azul shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="card-content">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="card-title-section">
                                    <div class="text-xs font-weight-bold text-azul text-uppercase mb-1">
                                        Autores
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Gestionar</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-edit fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-button-container text-center">
                        <a href="@Url.Action("Index", "Author")" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-right me-1"></i>Acceder
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gestión de Libros -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-azul shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="card-content">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="card-title-section">
                                    <div class="text-xs font-weight-bold text-azul text-uppercase mb-1">
                                        Libros
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Gestionar</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-book fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-button-container text-center">
                        <a href="@Url.Action("Index", "Book")" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-right me-1"></i>Acceder
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gestión de Usuarios -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-azul shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="card-content">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="card-title-section">
                                    <div class="text-xs font-weight-bold text-azul text-uppercase mb-1">
                                        Usuarios
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Gestionar</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-button-container text-center">
                        <a href="@Url.Action("Index", "User")" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-right me-1"></i>Acceder
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reportes -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-dorado shadow h-100 dashboard-card">
                <div class="card-body">
                    <div class="card-content">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="card-title-section">
                                    <div class="text-xs font-weight-bold text-dorado text-uppercase mb-1">
                                        Reportes
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Ver</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-chart-bar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-button-container text-center">
                        <a href="@Url.Action("Reports", "Admin")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-right me-1"></i>Acceder
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3 bg-azul">
                    <h6 class="m-0 font-weight-bold text-white">Resumen del Sistema</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="h4 text-azul">@totalUsers</div>
                            <small class="text-muted">Usuarios Registrados</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="h4 text-azul">@totalBooks</div>
                            <small class="text-muted">Libros en Catálogo</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="h4 text-azul">@totalLoans</div>
                            <small class="text-muted">Préstamos Activos</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="h4 text-dorado">@totalAuthors</div>
                            <small class="text-muted">Autores Registrados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-azul">
                    <h6 class="m-0 font-weight-bold text-white">Acciones Rápidas</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Author")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-user-edit me-2"></i>Gestionar Autores
                        </a>

                        <a href="@Url.Action("Index", "Book")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-book me-2"></i>Gestionar Libros
                        <a href="@Url.Action("Index", "Genre")" class="btn btn-outline-success btn-block text-start">
                            <i class="fas fa-book me-2"></i>Gestionar Genero de Libros
                        </a>

                        <a href="@Url.Action("Index", "User")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-users me-2"></i>Gestionar Usuarios
                        </a>

                        <a href="@Url.Action("Index", "Roles")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-user-shield me-2"></i>Gestionar Roles
                        </a>

                        <a href="@Url.Action("Index", "UserStatus")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-user-check me-2"></i>Gestionar Estado de usuario
                        </a>

                        <a href="@Url.Action("Index", "BookStatus")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-bookmark me-2"></i>Gestionar Estado de Libros
                        </a>

                        <a href="@Url.Action("Index", "Nationality")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-globe-americas me-2"></i>Gestionar Nacionalidad
                        </a>

                        <a href="@Url.Action("Settings", "Admin")" class="btn btn-outline btn-block text-start">
                            <i class="fas fa-cog me-2"></i>Configuración
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>