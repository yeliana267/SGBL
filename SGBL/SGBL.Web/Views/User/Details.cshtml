@model SGBL.Application.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2 class="mt-3">Detalles del Usuario</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Role</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Creado</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
