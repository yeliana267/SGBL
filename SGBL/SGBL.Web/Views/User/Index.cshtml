@model SGBL.Application.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
    var action = ViewData["Action"] as string ?? "index";
    var userList = ViewData["UserList"] as List<SGBL.Application.ViewModels.UserViewModel> ?? new();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            @(action == "create" ? "Crear Usuario" :
                        action == "edit" ? "Editar Usuario" :
                        action == "delete" ? "Eliminar Usuario" :
                        action == "details" ? "Detalles del Usuario" :
                        "Usuarios")
        </h2>

        @if (action == "index")
        {
            <a href="@Url.Action("Index", new { viewAction = "create" })" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Nuevo Usuario
            </a>
        }
        else
        {
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        }
    </div>

    <!-- Mensajes -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Contenido Dinámico -->
    @if (action == "index")
    {
        <!-- Listado -->
        <div class="card shadow-sm">
            <div class="card-body">
                @if (userList.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Rol</th>
                                    <th>Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in userList)
                                {
                                    <tr>
                                        <td>@usuario.Id</td>
                                        <td>@usuario.Name</td>
                                        <td>@usuario.Email</td>
                                        <td>
                                            @(usuario.AvailableRoles?.FirstOrDefault(r => r.Id == usuario.Role)?.Name ?? "N/A")
                                        </td>
                                        <td>
                                            @(usuario.AvailableStatuses?.FirstOrDefault(s => s.Id == usuario.Status)?.Name ?? "N/A")
                                        </td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Index", new { viewAction = "edit", id = usuario.Id })"
                                               class="btn btn-warning btn-sm">Editar</a>
                                            <a href="@Url.Action("Index", new { viewAction = "details", id = usuario.Id })"
                                               class="btn btn-info btn-sm">Ver</a>
                                            <a href="@Url.Action("Index", new { viewAction = "delete", id = usuario.Id })"
                                               class="btn btn-danger btn-sm">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h4>No hay usuarios registrados</h4>
                        <p>Comienza agregando un nuevo usuario al sistema.</p>
                    </div>
                }
            </div>
        </div>
    }
    else if (action == "create" || action == "edit")
    {
        <!-- Formulario Crear/Editar -->
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" action="@Url.Action("Index")">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="viewAction" value="@action" />

                    @if (action == "edit")
                    {
                        <input type="hidden" asp-for="Id" />
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Nombre *</label>
                                <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del usuario" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="usuario@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Contraseña @(action == "edit" ? "(dejar vacío para mantener actual)" : "*")</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="@(action == "edit" ? "Dejar vacío para no cambiar" : "Ingrese contraseña")" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Role" class="form-label">Rol *</label>
                                <select asp-for="Role" class="form-control"
                                        asp-items="@(new SelectList(Model.AvailableRoles ?? new List<SGBL.Application.ViewModels.RoleViewModel>(), "Id", "Name"))">
                                    <option value="">Seleccione un rol</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Estado *</label>
                                <select asp-for="Status" class="form-control"
                                        asp-items="@(new SelectList(Model.AvailableStatuses ?? new List<SGBL.Application.ViewModels.UserStatusViewModel>(), "Id", "Name"))">
                                    <option value="">Seleccione un estado</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            @(action == "edit" ? "Actualizar" : "Guardar")
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    }
    else if (action == "delete")
    {
        <!-- Confirmar Eliminación -->
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>¿Estás seguro de eliminar este usuario?</strong><br />
                    Esta acción no se puede deshacer.
                </div>

                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>
                    <dt class="col-sm-3">Nombre:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    <dt class="col-sm-3">Rol:</dt>
                    <dd class="col-sm-9">
                        @(Model.AvailableRoles?.FirstOrDefault(r => r.Id == Model.Role)?.Name ?? "N/A")
                    </dd>
                    <dt class="col-sm-3">Estado:</dt>
                    <dd class="col-sm-9">
                        @(Model.AvailableStatuses?.FirstOrDefault(s => s.Id == Model.Status)?.Name ?? "N/A")
                    </dd>
                </dl>

                <form method="post" action="@Url.Action("Index")">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="viewAction" value="@action" />
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirmar Eliminación
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    }
    else if (action == "details")
    {
        <!-- Detalles -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <hr>
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>
                    <dt class="col-sm-3">Nombre:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    <dt class="col-sm-3">Rol:</dt>
                    <dd class="col-sm-9">
                        @(Model.AvailableRoles?.FirstOrDefault(r => r.Id == Model.Role)?.Name ?? "N/A")
                    </dd>
                    <dt class="col-sm-3">Estado:</dt>
                    <dd class="col-sm-9">
                        @(Model.AvailableStatuses?.FirstOrDefault(s => s.Id == Model.Status)?.Name ?? "N/A")
                    </dd>
                </dl>

                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index", new { viewAction = "edit", id = Model.Id })"
                       class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver al Listado</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Mensajes de TempData
        $(document).ready(function() {
            if ('@TempData["success"]') {
                toastr.success('@TempData["success"]');
            }
            if ('@TempData["error"]') {
                toastr.error('@TempData["error"]');
            }
        });
    </script>
}