<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGBL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* ===== VARIABLES GLOBALES ===== */
        :root {
            /* Colores principales */
            --color-crema: #E2DED2;
            --color-azul: #182D4C;
            --color-dorado: #C8A952;
            --color-crema-claro: #FDF2D2;
            /* Colores secundarios */
            --color-blanco: #FFFFFF;
            --color-negro: #333333;
            --color-gris: #7A7A7A;
            /* Tipografía */
            --font-garamond: "Garamond", "Times New Roman", serif;
            --font-size-base: 16px;
            /* Espaciados */
            --spacing-xs: 0.5rem;
            --spacing-sm: 1rem;
            --spacing-md: 1.5rem;
            --spacing-lg: 2rem;
            --spacing-xl: 3rem;
        }

        /* ===== ESTILOS GENERALES ===== */
        body {
            font-family: var(--font-garamond);
            font-size: var(--font-size-base);
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            min-height: 100vh;
            background: var(--color-azul);
            color: var(--color-crema-claro);
            border-right: 3px solid var(--color-dorado);
            font-family: var(--font-garamond);
        }

            .sidebar .nav-link {
                color: var(--color-crema);
                padding: var(--spacing-sm) var(--spacing-md);
                margin: var(--spacing-xs) 0;
                border-radius: 0.5rem;
                transition: all 0.3s ease;
                font-size: 1.1rem;
                letter-spacing: 0.5px;
            }

                .sidebar .nav-link:hover {
                    background: var(--color-dorado);
                    color: var(--color-azul);
                    transform: translateX(5px);
                    font-weight: 600;
                }

                .sidebar .nav-link.active {
                    background: var(--color-dorado);
                    color: var(--color-azul);
                    font-weight: 700;
                    box-shadow: 0 4px 8px rgba(200, 169, 82, 0.3);
                }

                .sidebar .nav-link i {
                    width: 20px;
                    text-align: center;
                    font-size: 1.1rem;
                }

        /* ===== CONTENIDO PRINCIPAL ===== */
        .main-content {
            background-color: var(--color-crema-claro);
            font-family: var(--font-garamond);
        }

        /* ===== INFORMACIÓN DEL USUARIO ===== */
        .user-info {
            background: rgba(253, 242, 210, 0.1);
            border: 1px solid var(--color-dorado);
            border-radius: 0.5rem;
            padding: var(--spacing-md);
            margin-bottom: var(--spacing-md);
        }

        /* ===== HEADER DEL SIDEBAR ===== */
        .sidebar-header {
            border-bottom: 2px solid var(--color-dorado);
            padding-bottom: var(--spacing-md);
            margin-bottom: var(--spacing-md);
        }

            .sidebar-header h4 {
                color: var(--color-crema-claro);
                font-weight: 700;
                font-size: 1.5rem;
                letter-spacing: 1px;
            }

            .sidebar-header i {
                color: var(--color-dorado);
            }

        /* ===== TEXTO DEL USUARIO ===== */
        .user-info h6 {
            color: var(--color-crema-claro);
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: var(--spacing-xs);
        }

        .user-info small {
            color: var(--color-crema);
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .user-info .fa-user-circle {
            color: var(--color-dorado);
            font-size: 2.5rem;
            margin-bottom: var(--spacing-sm);
        }

        /* ===== BOTÓN DE LOGOUT ===== */
        .logout-btn {
            color: var(--color-crema) !important;
            border: 1px solid var(--color-dorado);
            font-size: 1.1rem;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .logout-btn:hover {
                background: var(--color-dorado) !important;
                color: var(--color-azul) !important;
                font-weight: 600;
            }

        /* ===== LÍNEA DIVISORIA ===== */
        hr {
            border-color: var(--color-dorado);
            opacity: 0.5;
            margin: var(--spacing-md) 0;
        }

        /* ===== RESPONSIVE ===== */
        @@media (max-width: 768px) {
            .sidebar .nav-link {
                padding: var(--spacing-xs) var(--spacing-sm);
                font-size: 1rem;
            }

            .sidebar-header h4 {
                font-size: 1.3rem;
            }

            .user-info h6 {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <!-- Header del sidebar -->
                    <div class="sidebar-header">
                        <h4 class="text-center mb-0">
                            <i class="fas fa-book me-2"></i>SGBL
                        </h4>
                    </div>

                    <!-- Información del usuario -->
                    <div class="user-info">
                        <div class="text-center">
                            <i class="fas fa-user-circle fa-2x mb-2"></i>
                            <h6 class="mb-1">@ViewData["UserName"]</h6>
                            <small>@ViewData["UserRole"]</small>
                            <br>
                            <small>@ViewData["UserEmail"]</small>
                        </div>
                    </div>

                    <!-- Menú de navegación -->
                    <nav class="nav flex-column">
                        @if (ViewData["UserRole"]?.ToString() == "Administrador")
                        {
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                               href="@Url.Action("Dashboard", "Admin")">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")"
                               href="@Url.Action("Users", "Admin")">
                                <i class="fas fa-users me-2"></i>Usuarios
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")"
                               href="@Url.Action("Reports", "Admin")">
                                <i class="fas fa-chart-bar me-2"></i>Reportes
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")"
                               href="@Url.Action("Settings", "Admin")">
                                <i class="fas fa-cog me-2"></i>Configuración
                            </a>
                        }
                        else if (ViewData["UserRole"]?.ToString() == "Usuario")
                        {
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                               href="@Url.Action("Dashboard", "User")">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Books" ? "active" : "")"
                               href="@Url.Action("Books", "User")">
                                <i class="fas fa-book me-2"></i>Buscar Libros
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MyLoans" ? "active" : "")"
                               href="@Url.Action("MyLoans", "User")">
                                <i class="fas fa-list me-2"></i>Mis Préstamos
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")"
                               href="@Url.Action("Profile", "User")">
                                <i class="fas fa-user me-2"></i>Mi Perfil
                            </a>
                        }
                        else if (ViewData["UserRole"]?.ToString() == "Bibliotecario")
                        {
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                               href="@Url.Action("Dashboard", "Bibliotecario")">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "BookManagement" ? "active" : "")"
                               href="@Url.Action("BookManagement", "Bibliotecario")">
                                <i class="fas fa-book me-2"></i>Gestión Libros
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "LoanManagement" ? "active" : "")"
                               href="@Url.Action("LoanManagement", "Bibliotecario")">
                                <i class="fas fa-exchange-alt me-2"></i>Gestión Préstamos
                            </a>
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Returns" ? "active" : "")"
                               href="@Url.Action("Returns", "Bibliotecario")">
                                <i class="fas fa-undo me-2"></i>Devoluciones
                            </a>
                        }

                        <!-- Logout -->
                        <hr class="my-3">
                        <form asp-action="Logout" asp-controller="AuthViews" method="post" class="nav-link p-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link text-start w-100 p-2 logout-btn">
                                <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                            </button>
                        </form>
                    </nav>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>