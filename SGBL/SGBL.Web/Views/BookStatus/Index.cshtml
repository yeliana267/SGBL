@model List<SGBL.Application.ViewModels.BookStatusViewModel>
@{
    ViewData["Title"] = "Listado de Estados";
}

<h2 class="mt-3">Estados</h2> 

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Nuevo Estado</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estado in Model)
        {
            <tr>
                <td>@estado.Id</td>
                <td>@estado.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@estado.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@estado.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Delete" asp-route-id="@estado.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
